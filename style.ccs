body {
  background: #222;
  color: white;
  font-family: Arial, sans-serif;
  text-align: center;
}

h1 {
  color: #ff4b6e;
}

.builder {
  margin-top: 20px;
}

canvas {
  background: #333;
  border-radius: 10px;
}

button {
  margin: 5px;
  padding: 10px;
  border: none;
  border-radius: 8px;
  background: #ff4b6e;
  color: white;
  cursor: pointer;
}

button:hover {
  background: #ff6f91;
}

.control-group {
  margin-top: 10px;
}
