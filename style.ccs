body {
  font-family: Arial, sans-serif;
  background: #222;
  color: white;
  text-align: center;
}

.editor {
  margin-top: 20px;
}

canvas {
  background: #333;
  margin-top: 10px;
  border-radius: 10px;
}
button {
  margin: 5px;
  padding: 10px;
  border: none;
  border-radius: 8px;
  background: #ff4b6e;
  color: white;
  cursor: pointer;
}
button:hover {
  background: #ff6f91;
}
